<%-include("header")%>
<%-include("navbar")%>
<%-include("sidebar")%>
    <div class="container" style="height:70%;width:700px;position:relative;top:50px;">
        <h3 class="page-header">
            Create Community
        </h3>   
      <form action="/createCommunity" method="post">
     <input class="form-control" type="text" required="" name="communityName" placeholder="Name" maxlength="70">
    <br>
     <h4 class="page-header" style="color:#707070">Description</h4>
     <div class="container">
            <div id="customQuill" style="height:400px">
            </div>
          </div>
          <div class="form-group ">
                <label style="color:#707070">Rule :</label>
                <input class="radio radio-inline" type="radio" checked="" value="Direct" name="commrule"> Direct
                <input class="radio radio-inline" type="radio" value="Permission" name="commrule"> Permission
            </div>
            <div class="col-xs-4 col-sm-3">
                    <span class="btn btn-warning" onclick="$('#file').click()">Upload Image</span>
                  </div>
                  <textarea id="textarea" name="description" style="display:none"></textarea>
                  <div class="form-group">
                        <input class="form-control btn btn-primary"id ="submitbtn"type="submit" value="Create Community">
                </div>
                </form>
    </div>
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script src="https://cdn.quilljs.com/1.3.6/quill.min.js"></script>
        <script>

var toolbarOptions = [
  ['bold', 'italic', 'underline', 'strike', 'link'],        // toggled buttons
  ['blockquote', 'code-block'],
  ['video', 'formula', 'image'],
  [{ 'header': 1 }, { 'header': 2 }],               // custom button values
  [{ 'list': 'ordered'}, { 'list': 'bullet' }],
  [{ 'script': 'sub'}, { 'script': 'super' }],      // superscript/subscript
  [{ 'indent': '-1'}, { 'indent': '+1' }],          // outdent/indent
  [{ 'direction': 'rtl' }],                         // text direction

  [{ 'size': ['small', false, 'large', 'huge'] }],  // custom dropdown
  [{ 'header': [1, 2, 3, 4, 5, 6, false] }],

  [{ 'color': [] }, { 'background': [] }],          // dropdown with defaults from theme
  [{ 'font': [] }],
  [{ 'align': [] }],

  ['clean']                                         // remove formatting button
];
var description;
            var options = {
  theme: 'snow',
  modules: {
    toolbar: toolbarOptions     
  },
  placeholder: 'Enter your Description here..'
 }

 var container = document.getElementById('customQuill');
var editor2 = new Quill(container, options);
  $("#submitbtn").click(function(){
    description = editor2.container.firstChild.innerText
    $("#textarea").val(description);
  });
            </script>
